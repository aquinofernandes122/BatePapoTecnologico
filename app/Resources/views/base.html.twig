<body>
{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">BATE PAPO </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Inicio</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Cadastros <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('aluno_index') }}">Aluno</a></li>
                            <li><a href="#"></a></li>
                            <li><a href="{{ path('minicurso_index') }}">Mini Cursos</a></li>
                            <li><a href="{{ path('evento_index') }}">Eventos</a></li>
                            <li><a href="{{ path('trabalhos_index') }}">Trabalhos</a></li>


                        </ul>
                    </li>
                    <li><a href="#contact">Contato</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <div id="navbar" class="navbar-collapse collapse">
                        <form class="navbar-form navbar-right">
                            <div class="form-group">
                                <input type="text" placeholder="Email" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="password" placeholder="Senha" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-info">Entrar</button>
                        </form>
                    </div><!--/.navbar-collapse -->
            </div>
            </ul>
        </div><!--/.nav-collapse -->
    </nav>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('public/js/jquery-3.1.1.min.js') }}"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('public/js/jquery-3.1.1.min.js') }}"><\/script>')</script>
    <script src="{{ asset('public/js/bootstrap.min.js') }}"></script>
