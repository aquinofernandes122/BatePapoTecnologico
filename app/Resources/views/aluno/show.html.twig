{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>Aluno</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aluno.id }}</td>
            </tr>
            <tr>
                <th>Matricula</th>
                <td>{{ aluno.matricula }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ aluno.nome }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('aluno_index') }}">Back to the list</a>
